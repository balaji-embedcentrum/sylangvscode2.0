{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "autoClosingPairs": [
    ["\"", "\""]
  ],
  "surroundingPairs": [
    ["\"", "\""]
  ],
  "wordPattern": "([a-zA-Z_][a-zA-Z0-9_]*)",
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(def|hdef)\\s+.*$",
    "decreaseIndentPattern": "^\\s*$"
  },
  "folding": {
    "markers": {
      "start": "^\\s*(def|hdef)\\s+.*$",
      "end": "^\\s*$"
    }
  }
} 