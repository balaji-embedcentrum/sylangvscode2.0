{
  "name": "sylangai",
  "displayName": "Sylang AI Sprint Integration",
  "description": "AI-first sprint automation with Sylang DSL - reads .spr files, executes tasks via AI, updates status",
  "version": "2.5.0",
  "publisher": "balaji-embedcentrum",
  "repository": {
    "type": "git",
    "url": "https://github.com/balaji-embedcentrum/sylangai.git"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "sylang",
    "ai",
    "sprint",
    "automation",
    "dsl",
    "kanban",
    "cursor"
  ],
  "activationEvents": [
    "onCommand:sylang.ai.runAutoAgent"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Sylang AI Sprint Integration",
      "properties": {
        "sylangai.executionMode": {
          "type": "string",
          "enum": ["directAPI", "timeout", "logMonitoring"],
          "default": "directAPI",
          "description": "AI execution mode: directAPI (vscode.lm), timeout (30s delays), logMonitoring (watch Copilot logs)"
        },
        "sylangai.timeoutSeconds": {
          "type": "number",
          "default": 30,
          "description": "Timeout in seconds for timeout mode"
        },
        "sylangai.logMonitoringInterval": {
          "type": "number",
          "default": 5,
          "description": "Log checking interval in seconds for log monitoring mode"
        },
        "sylangai.logMonitoringTimeout": {
          "type": "number",
          "default": 120,
          "description": "Maximum wait time in seconds for log monitoring mode"
        }
      }
    },
    "commands": [
      {
        "command": "sylang.ai.runAutoAgent",
        "title": "Run Auto AI Agent",
        "category": "Sylang AI"
      },
      {
        "command": "sylang.ai.resetSprint",
        "title": "Reset Sprint Tasks to Open", 
        "category": "Sylang AI"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "author": "",
  "license": "ISC"
}
